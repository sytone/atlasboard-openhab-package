{
  "title": "OpenHAB Dashboard",
  "titleVisible": true,

  "description": "Dashboard for a OpenHAB powered environment.",

  "layout": {
    "customJS" : ["jquery.peity.js","date.format.js","sprintf.js"],
    "widgets" : [
      {"row" : 1, "col" : 1, "width" : 1, "height" : 1, 
        "widget" : "dummy",         "job" : "dummy",         "config": "dummy"},
      {"row" : 1, "col" : 2, "width" : 1, "height" : 1, 
        "widget" : "clock",         "job" : "clock",         "config": "clock"},
      {"row" : 1, "col" : 3, "width" : 2, "height" : 2, 
        "widget" : "imagestream",   "job" : "webcam-image",  "config": "testimage"},
      {"row" : 2, "col" : 1, "width" : 2, "height" : 2, 
        "widget" : "dummy",   "job" : "openhab-bridge",  "config": "openhab-officelamp"},
      {"row" : 3, "col" : 1, "width" : 2, "height" : 1, "widget" : "linegraph",    "job" : "sales-graph",         "config": "sales"},
      {"row" : 3, "col" : 3, "width" : 2, "height" : 2, "widget" : "image",        "job" : "picture-of-the-day",  "config": "picture"},
      {"row" : 3, "col" : 5, "width" : 2, "height" : 4, "widget" : "quotes",       "job" : "quotes",              "config": "quotes-famous"},
      {"row" : 4, "col" : 1, "width" : 2, "height" : 3, "widget" : "keyvaluelist", "job" : "issue-types",         "config": "issue-types"},
      {"row" : 5, "col" : 2, "width" : 2, "height" : 2, "widget" : "calendar",     "job" : "google-calendar",     "config": "calendar-holidays"}
    ]
  },

  "config" : {
    
    "openhab-officelamp" : {
      "openhabSimpleAuth": "simplekeycheck",
      "itemType": "Number",
      "itemName": "Temperature_GF_Corridor", 
      "itemLabel": "Ground Floor Corridor", 
      "itemBody" : "Temperature [%.1f Â°C]",
      "displayImageBase": "",
      "displayLabel": true,
      "interval": 60000
    },
    
   "testimage" : { 
       "interval": 1000,
       "imageUrl" : "http://192.168.0.149/snapshot.cgi",
       "username" : "admin",
       "password" : "123456",
       "imageFileName" : "camera1.jpg",
       "widgetName" : "imagestream",
       "dashboardName" : "openhab",
       "imageTitle" : "Study Camera"
     },


	"clock" : {
	  "interval": 10000,
	  "hideTitle": true,
      "title": "Current Time",
      "dateFormat": "yyyy/mm/dd",
	  "timeFormat": "h:MM TT",
	  "timeZone": 8
	},

	"dummy" : {
	  "interval": 10000,
      "title": "Hello World",
      "text": "Blah"
	},

    "calendar-holidays": {
      "interval": 60000,
      "calendarUrl": "http://www.calendarlabs.com/templates/ical/US-Holidays.ics",
      "maxEntries": 9,
      "widgetTitle": "Upcoming US Holidays"
    },

    "issue-types": {
      "interval": 60000,
      "widgetTitle": "Issues Types in the Project",
      "database": {
        "host": "mydatabase.mycompany.com",
        "port": 1000,
        "database": "salesdb"
      }
    },

    "picture": {
      "interval": 60000,
      "widgetTitle": "Nat Geo Picture of the Day",
      "url": "http://photography.nationalgeographic.com/photography/photo-of-the-day"
    },

    "quotes-famous": {
      "interval": 60000,
      "widgetTitle": "Famous Quotes",
      "quotes": [
        {
          "quote": "It's not that I'm so smart, it's just that I stay with problems longer.",
          "author": "Albert Einstein"
        },
        {
          "quote": "Ignorance is the curse of God; knowledge is the wing wherewith we fly to heaven.",
          "author": "William Shakespeare"
        },
        {
          "quote": "Software built on pride and love of subject is superior to software built for profit.",
          "author": "Ravi Simhambhatla"
        },
        {
          "quote": "If developers’ pains are Java and .NET, the antidote is dynamic languages and frameworks.",
          "author": "Jeffrey Hammond"
        },
        {
          "quote": "Software is like sex: it's better when it's free.",
          "author": "Linus Torvalds"
        },
        {
          "quote": "People enjoy the interaction on the Internet, and the feeling of belonging to a group that does something interesting: that's how some software projects are born.",
          "author": "Linus Torvalds"
        },
        {
          "quote": "The ultimate search engine would basically understand everything in the world, and it would always give you the right thing.",
          "author": "Larry Page"
        },
        {
          "quote": "Mathematics is the queen of the sciences and number theory is the queen of mathematics.",
          "author": "Carl Friedrich Gauss"
        },
        {
          "quote": "Computer science is no more about computers than astronomy is about telescopes.",
          "author": "Edsger Dijkstra"
        }
      ],
      "limit": 3
    },

    "sales": {
      "interval": 60000,
      "widgetTitle": "Monthly Sales"
    }
  }
}